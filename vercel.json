{
  "version": 2,
  "builds": [
    {
      "src": "tec-api-gateway/**/*.ts",
      "use": "@vercel/node",
      "config": { "maxLambdaSize": "50mb" }
    },
    {
      "src": "tec-payment-service/**/*.ts",
      "use": "@vercel/node",
      "config": { "maxLambdaSize": "50mb" }
    },
    {
      "src": "tec-wallet-service/**/*.ts",
      "use": "@vercel/node",
      "config": { "maxLambdaSize": "50mb" }
    },
    {
      "src": "tec-auth-service/**/*.ts",
      "use": "@vercel/node",
      "config": { "maxLambdaSize": "50mb" }
    }
  ],
  "routes": [
    {
      "src": "/api/payments/(.*)",
      "dest": "tec-payment-service/$1.ts"
    },
    {
      "src": "/api/wallet/(.*)",
      "dest": "tec-wallet-service/$1.ts"
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "tec-auth-service/$1.ts"
    },
    {
      "src": "/(.*)",
      "dest": "tec-api-gateway/$1.ts"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://sdk.minepi.com; connect-src 'self' https://api.minepi.com https://sdk.minepi.com https://*.minepi.com; frame-ancestors 'self' https://*.minepi.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: blob: https:;"
        },
        { "key": "Cross-Origin-Opener-Policy", "value": "unsafe-none" },
        { "key": "Cross-Origin-Embedder-Policy", "value": "unsafe-none" },
        { "key": "Cross-Origin-Resource-Policy", "value": "cross-origin" }
      ]
    }
  ],
  "functions": {
    "tec-api-gateway/**/*.ts": { "memory": 1024, "maxDuration": 10 },
    "tec-payment-service/**/*.ts": { "memory": 1024, "maxDuration": 10 },
    "tec-wallet-service/**/*.ts": { "memory": 1024, "maxDuration": 10 },
    "tec-auth-service/**/*.ts": { "memory": 1024, "maxDuration": 10 }
  }
}
