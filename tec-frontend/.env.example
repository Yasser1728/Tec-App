# Pi Network Configuration
# Get your API key from the Pi Developer Portal: https://developers.minepi.com
PI_API_KEY=your_pi_api_key_here

# Pi App ID from the Pi Developer Portal
PI_APP_ID=your_pi_app_id_here

# Set to 'false' for Mainnet/Production, 'true' for Testnet/Sandbox (default: true)
NEXT_PUBLIC_PI_SANDBOX=true

# Set to 'false' for Mainnet/Production on server-side routes (default: true)
PI_SANDBOX=true

# Client-side Pi App ID (required for Pi.init() in the browser)
NEXT_PUBLIC_PI_APP_ID=your_pi_app_id_here

# Pi SDK initialization timeout in milliseconds (default: 25000ms = 25 seconds)
# Increase this if you experience "Pi SDK failed to load" errors on slow networks
# NEXT_PUBLIC_PI_SDK_TIMEOUT=25000

# Pi authentication timeout in milliseconds (default: 45000ms = 45 seconds)
# Increase this if authentication frequently times out in your deployment environment
# NEXT_PUBLIC_PI_AUTH_TIMEOUT=45000

# Payment approval stage timeout in milliseconds (default: 180000ms = 3 minutes)
# NEXT_PUBLIC_PI_APPROVAL_TIMEOUT=180000

# Payment completion stage timeout in milliseconds (default: 180000ms = 3 minutes)
# NEXT_PUBLIC_PI_COMPLETION_TIMEOUT=180000
