# Pi Network Configuration
# Get your API key from the Pi Developer Portal
PI_API_KEY=your_pi_api_key_here

# Set to 'false' for Mainnet, 'true' for Testnet (default: true)
NEXT_PUBLIC_PI_SANDBOX=true

# Pi SDK initialization timeout in milliseconds (default: 25000ms = 25 seconds)
# Increase this if you experience "Pi SDK failed to load" errors on slow networks
# NEXT_PUBLIC_PI_SDK_TIMEOUT=25000

# Pi authentication timeout in milliseconds (default: 45000ms = 45 seconds)
# Increase this if authentication frequently times out in your deployment environment
# NEXT_PUBLIC_PI_AUTH_TIMEOUT=45000
