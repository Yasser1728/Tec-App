{
  "name": "tec-ecosystem",
  "version": "1.0.0",
  "description": "TEC Ecosystem - 24 App Digital Platform Core Infrastructure",
  "private": true,
  "workspaces": [
    "tec-api-gateway",
    "tec-auth-service",
    "tec-wallet-service",
    "tec-payment-service"
  ],
  "scripts": {
    "dev:gateway": "cd tec-api-gateway && npm run dev",
    "dev:auth": "cd tec-auth-service && npm run dev",
    "dev:wallet": "cd tec-wallet-service && npm run dev",
    "dev:payment": "cd tec-payment-service && npm run dev",
    "build:all": "npm run build --workspaces",
    "install:all": "npm install --workspaces",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:studio": "npx prisma studio"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.2.2",
    "prisma": "^5.0.0"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0"
  }
}
